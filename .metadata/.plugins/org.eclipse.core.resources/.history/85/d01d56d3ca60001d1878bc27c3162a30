public class Main {
	public static void main(String[] args)  {

		int[] num_list = {1, 2, 3, 4, 5, 6, 7, 8};
		
		int n = 2;
		
		
		int length = num_list.length;
		int len = length / n;
		int[][] answer = new int[len][n];
		int j = 0;
		int num = 0;
		
		for (int i = 0; i < length; i++) {
			answer[j][num] = num_list[i];
			num++;
			if (num % n == 0) {
				j++;
				num = 0;
			}
			
		}
		
		
		
		
		
	}
		
}
